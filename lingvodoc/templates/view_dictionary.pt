                    <span id="play" ng-show="paused">
                        <i class="glyphicon glyphicon-play"></i>
                        Play
                    </span>

                    <span id="pause" ng-show="!paused">
                        <i class="glyphicon glyphicon-pause"></i>
                        Pause
                    </span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 ">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td>Запись слова</td>
                        <td>Транскрипция</td>
                        <td>Перевод</td>
                        <td>Звук</td>
                    </tr>
                    </thead>

                    <tbody>

                    <tr ng-repeat="word in words">
                        <td>
                            <div ng-repeat="entry in word.entries">
                                <div>{{ entry.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="transcription in word.transcriptions">
                                <div>{{ transcription.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="translation in word.translations">
                                <div>{{ translation.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="sound in word.sounds">
                                <div>
                                    <button type="button" class="btn btn-default btn-sm" ng-click="play(sound.url)">
                                        <span class="glyphicon glyphicon-play">Воспроизвести</span>
                                    </button>
                                </div>
                            </div>
                        </td>
                    </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</script>

</body>
</html>
