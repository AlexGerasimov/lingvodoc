<html ng-app="viewDictionaryModule" ng-controller="ViewDictionaryController">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Lingvodoc future</title>

    <link rel="stylesheet" href="${request.static_url('lingvodoc:static/css/bootstrap.min.css')}">
    <link rel="stylesheet" href="${request.static_url('lingvodoc:static/css/bootswatch.min.css')}">
    <link rel="stylesheet" type="text/css" href="${request.static_url('lingvodoc:static/css/lingvodoc.css')}" />

    <script src="${request.static_url('lingvodoc:static/js/jquery-2.1.1.min.js')}"></script>
    <script src="${request.static_url('lingvodoc:static/js/bootstrap.min.js')}"></script>
    <script src="${request.static_url('lingvodoc:static/js/angular.min.js')}"></script>
    <script src="${request.static_url('lingvodoc:static/js/ui-bootstrap-tpls-0.13.0.min.js')}"></script>
    <script src="${request.static_url('lingvodoc:static/js/wavesurfer.js')}"></script>

    <script src="${request.static_url('lingvodoc:static/js/lingvowave.js')}"></script>
    <script src="${request.static_url('lingvodoc:static/js/lingvodocview.js')}"></script>


</head>
<body>

<div id="getMetaWordsUrl" data-lingvodoc="${request.route_url('api_metaword_get_batch', dictionary_client_id=client_id, dictionary_id=id)}"></div>
<div id="getDictionaryStatUrl" data-lingvodoc="${request.route_url('dictionary_stats', dictionary_client_id=client_id, dictionary_id=id)}"></div>


<div metal:use-macro="load: nav.pt"></div>

<div class="container-fluid" style="padding-top: 20px" ng-cloak>

    <div class="row" style="margin: 30px 0">
        <div class="col-sm-10">
            <wavesurfer url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
        </div>

        <div class="col-sm-2">
            <button ng-class="{disabled: !isMediaFileAvailable()}" class="btn btn-success btn-block" ng-click="playPause()">
                <span id="play" ng-show="paused">
                    <i class="glyphicon glyphicon-play"></i>
                    Play
                </span>

                <span id="pause" ng-show="!paused">
                    <i class="glyphicon glyphicon-pause"></i>
                    Pause
                </span>
            </button>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12 ">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <td>Запись слова</td>
                    <td>Транскрипция</td>
                    <td>Перевод</td>
                    <td>Звук</td>
                    <td></td>
                </tr>
                </thead>

                <tbody>

                <tr ng-repeat="metaword in metawords">
                    <td>
                        <div ng-repeat="entry in metaword.entries">
                            <div>{{ entry.content }}</div>
                        </div>
                    </td>


                    <td>
                        <div ng-repeat="transcription in metaword.transcriptions">
                            <div>{{ transcription.content }}</div>
                        </div>
                    </td>

                    <td>
                        <div ng-repeat="translation in metaword.translations">
                            <div>{{ translation.content }}</div>
                        </div>
                    </td>

                    <td>
                        <div ng-repeat="sound in metaword.sounds">
                            <div>
                                <button type="button" class="btn btn-default btn-sm" ng-click="play(sound.url)">
                                    <span class="glyphicon glyphicon-play"></span>
                                </button>
                            </div>
                        </div>
                    </td>


                    <td>
                        <button type="button" class="btn btn-default btn-sm" ng-class="{disabled: metaword.paradigms.length < 1}" ng-click="showParadigms(metaword)">
                            Парадигмы
                        </button>

                        <button type="button" class="btn btn-default btn-sm" ng-class="{disabled: metaword.etymology_tags.length < 1}" ng-click="showEtymology(metaword)">
                            Этимология
                        </button>
                    </td>

                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center">
        <nav>
            <ul class="pagination" ng-repeat="pageNumber in range(1, pageCount)">
                <span ng-if="pageNumber == pageIndex">
                    <li class="active">{{ pageNumber }}</li>
                </span>
                <span ng-if="pageNumber != pageIndex">
                    <li><a href="#" ng-click="getPage(pageNumber)">{{ pageNumber }}</a></li>
                </span>
            </ul>
        </nav>
    </div>

</div>


<script type="text/ng-template" id="etymologyModal.html">

    <div class="modal-header">
        <h3 class="modal-title">Этимология</h3>
    </div>

    <div class="modal-body">

        <div class="row" style="margin: 30px 0">

            <div class="col-sm-10">
                <wavesurfer id url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
            </div>

            <div class="col-sm-2">
                <button ng-class="{disabled: !isMediaFileAvailable()}" class="btn btn-success btn-block" ng-click="playPause()">
                    <span id="play" ng-show="paused">
                        <i class="glyphicon glyphicon-play"></i>
                        Play
                    </span>

                    <span id="pause" ng-show="!paused">
                        <i class="glyphicon glyphicon-pause"></i>
                        Pause
                    </span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td>Запись слова</td>
                        <td>Транскрипция</td>
                        <td>Перевод</td>
                        <td>Звук</td>
                        <td>Словарь</td>
                    </tr>
                    </thead>

                    <tbody>

                    <tr ng-repeat="word in words">
                        <td>
                            <div ng-repeat="entry in word.entries">
                                <div>{{ entry.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="transcription in word.transcriptions">
                                <div>{{ transcription.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="translation in word.translations">
                                <div>{{ translation.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="sound in word.sounds">
                                <div>
                                    <button type="button" class="btn btn-default btn-sm" ng-click="play(sound.url)">
                                        <span class="glyphicon glyphicon-play">Воспроизвести</span>
                                    </button>
                                </div>
                            </div>
                        </td>

                        <td>
                            <div>{{ word.dictionary_name }}</div>
                        </td>

                    </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</script>


