<html>
<head metal:use-macro="load: head.pt">
</head>
<body>
    <div metal:use-macro="load: nav.pt"></div>
<!--    <div class="container"> -->
     <div class="col-lg-6 col-sm-6 col-md-6 col-lg-offset-3 col-sm-offset-3 col-sm-offset-3">
      <form role="form" action="" method="post" id="register_form">
        <h2>Зарегистрируйтесь в системе</h2>
        <input name="login" type="text" class="form-control" placeholder="Выберите логин" required autofocus>
        <input id="password" name="password" type="password" class="form-control" placeholder="Задайте пароль" required>
        <input id="cpassword" type="password" class="form-control" placeholder="Напишите пароль еще раз, просто на всякий случай" required>
        <input id="name" name="name" type="text" class="form-control" placeholder="Как Вас зовут?" required>
        <input id="email" name="email" type="email" class="form-control" placeholder="Ваш e-mail" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Зарегистрироваться</button>
      </form>
     </div>

<!--    </div> -->
</body>

<script>
    $('#register_form').validate({
        rules: {
            password: {
                minlength: 5
            },
            cpassword: {
                minlength: 5,
                equalTo: "#password"
            }
        }
    });
</script>
</html>