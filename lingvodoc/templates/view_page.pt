<html>
<head metal:use-macro="load: head.pt">
</head>
<body>

<div id="getCorpusUrl" data-lingvodoc="${request.route_url('api_corpora_get', corpus_client_id=1, corpus_id=1)}"></div>

<div metal:use-macro="load: nav.pt"></div>

<div class="container-fluid" style="padding-top: 20px">

    <!-- ko foreach: texts -->

    <div class="lingvodoc-text">
        <!-- ko foreach: text_titles -->
            <span class="lingvodoc-text-title">
                <!-- ko text: content --><!-- /ko --><sup class="lingvodoc-text-title-lang" data-bind="text: lang"></sup>
            </span>

        <!-- /ko -->

        <div class="lingvodoc-paragraphs" data-bind="foreach: paragraphs">
            <div class="lingvodoc-paragraph">
                <div class="lingvodoc-phrases" data-bind="foreach: phrases">
                    <div class="lingvodoc-phrase">
                        <!-- ko foreach: words -->
                                <!-- ko if: $data.hasDictionaryEntry() -->
                                    <!-- ko with: $data.getDictionaryEntry() -->
                                        <span class="lingvodoc-word" data-bind="popover: { options: { title: 'metaword', placement: 'top' }, template: 'word-metaword-template', data: {metaword: {id: 'placeholder'}} }, text: $parent.getTextEntry().content"></span>
                                    <!-- /ko -->
                                <!-- /ko -->

                                <!-- ko ifnot: $data.hasDictionaryEntry() -->
                                    <!-- ko with: $data.getTextEntry() -->
                                    <span class="lingvodoc-word" data-bind="popover: { options: { title: content, placement: 'top' }, template: 'word-items-template', data: { items: $parent.items } }, text: $parent.getTextEntry().content"></span>
                                    <!-- /ko -->
                                <!-- /ko -->
                        <!-- /ko -->
                    </div>

                    <div class="lingvodoc-translations" data-bind="foreach: translations">
                        <div class="lingvodoc-translation">
                            <span class="lingvodoc-text-translation">
                                <!-- ko text: content --><!-- /ko --><sup class="lingvodoc-text-translation-lang" data-bind="text: lang"></sup>
                            </span>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /ko -->
</div>

<script type="text/html" id="word-items-template">
        <ul>
            <!-- ko foreach: items -->
            <li>
                <span class="lingvodoc-item">
                    <!-- ko text: content --><!-- /ko --><sup class="lingvodoc-item-lang" data-bind="text: lang"></sup>
                </span>
            </li>
            <!-- /ko -->
        </ul>
</script>

<script type="text/html" id="word-metaword-template">
    <ul>
        <!-- ko with: metaword -->
        <span data-bind="text: id"></span>
        <!-- /ko -->
    </ul>
</script>



<script data-main="${request.static_url('lingvodoc:static/js/lingvodemo.js')}"
        src="${request.static_url('lingvodoc:static/js/require.js')}"></script>
</body>
</html>