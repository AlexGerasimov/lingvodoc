<html>
<head metal:use-macro="load: head.pt">
</head>
<body>

<div id="currentId" data-lingvodoc="${auth}"></div>
<div id="id" data-lingvodoc="${id}"></div>
<div id="clientId" data-lingvodoc="${client_id}"></div>
<div id="getMetaWordsUrl" data-lingvodoc="${request.route_url('api_metaword_get_batch', dictionary_client_id=client_id, dictionary_id=id)}"></div>
<div id="getDictionaryStatUrl" data-lingvodoc="${request.route_url('dictionary_stats', dictionary_client_id=client_id, dictionary_id=id)}"></div>

<div metal:use-macro="load: nav.pt"></div>
<div class="container-fluid" style="padding-top: 20px">
    <div class="row">
        <div class="col-md-1">
            <button type="button" class="btn btn-default" data-bind="click: addNewMetaWord">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
        <div class="col-md-11 ">

            <div data-bind="wavesurfer: {url: lastSoundFileUrl, selectRegion: selectRegion}"></div>


            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                <!-- ko with: annotation -->
                <div class="panel panel-primary" data-bind="visible: isVisible">

                    <div class="panel-heading">Добавить/Изменить аннотацию</div>

                    <div class="panel-body">

                        <div class="input-group">
                            <span class="input-group-addon">От</span>
                            <input type="text" class="form-control" aria-label="" data-bind="value: from">
                            <span class="input-group-addon">секунд</span>
                        </div>

                        <div class="input-group">
                            <span class="input-group-addon">До</span>
                            <input type="text" class="form-control" aria-label="" data-bind="value: to">
                            <span class="input-group-addon">секунд</span>
                        </div>

                        <div class="input-group">
                            <span class="input-group-addon">Значение</span>
                            <input type="text" class="form-control" aria-label="Значение" data-bind="value: value">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button" data-bind="click: $root.saveAnnotation">Сохранить</button>
                            </span>
                        </div>

                    </div>
                </div>
                <!-- /ko -->
                </div>
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <td>Запись слова</td>
                    <td>Транскрипция</td>
                    <td>Перевод</td>
                    <td>Звук</td>
                    <td></td>
                </tr>
                </thead>

                <tbody>

                <!-- ko foreach: metawords -->
                <tr>
                    <td>
                        <div data-bind="foreach: entries">
                            <span data-bind="text: content"></span>
                            <!-- ko if: $parent.addedByUser -->
                            <button type="button" class="btn btn-default btn-xs"
                                    data-bind="click: $root.removeValue.bind($data, $parent, 'entries')">
                                <span class="glyphicon glyphicon-remove-sign"></span>
                            </button>
                            <!-- /ko -->
                            <br>
                        </div>

                        <button type="button" class="btn btn-default btn-sm"
                                data-bind="click: $root.addValue.bind($data, $data, 'entries')">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>

                        <br>
                        <!-- ko if: $root.isInputEnabled($data, 'entries') -->
                        <input type="text" value="" placeholder="new value..."
                               data-bind="event: { blur: $root.saveTextValue.bind($data, 'entries') }">
                        <!-- /ko  -->
                    </td>


                    <td>
                        <div data-bind="foreach: transcriptions">
                            <span data-bind="text: content"></span>
                            <!-- ko if: $parent.addedByUser -->
                            <button type="button" class="btn btn-default btn-xs"
                                    data-bind="click: $root.removeValue.bind($data, $parent, 'transcriptions')">
                                <span class="glyphicon glyphicon-remove-sign"></span>
                            </button>
                            <!-- /ko -->
                            <br>
                        </div>

                        <button type="button" class="btn btn-default btn-sm"
                                data-bind="click: $root.addValue.bind($data, $data, 'transcriptions')">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>

                        <br>
                        <!-- ko if: $root.isInputEnabled($data, 'transcriptions') -->
                        <input type="text" value="" placeholder="new value..."
                               data-bind="event: { blur: $root.saveTextValue.bind($data, 'transcriptions') }">
                        <!-- /ko  -->
                    </td>

                    <td>
                        <div data-bind="foreach: translations">
                            <span data-bind="text: content"></span>
                            <!-- ko if: $parent.addedByUser -->
                            <button type="button" class="btn btn-default btn-xs"
                                    data-bind="click: $root.removeValue.bind($data, $parent, 'translations')">
                                <span class="glyphicon glyphicon-remove-sign"></span>
                            </button>
                            <!-- /ko -->
                            <br>
                        </div>
                        <div>
                            <button type="button" class="btn btn-default btn-sm"
                                    data-bind="click: $root.addValue.bind($data, $data, 'translations')">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </div>
                        <div>
                            <!-- ko if: $root.isInputEnabled($data, 'translations') -->
                            <input type="text" value="" placeholder=""
                                   data-bind="event: { blur: $root.saveTextValue.bind($data, 'translations') }">
                            <!-- /ko  -->
                        </div>
                    </td>

                    <td>
                        <div data-bind="foreach: sounds">

                            <button type="button" class="btn btn-default btn-sm" data-bind="click: $root.playSound">
                                <span class="glyphicon glyphicon-play">Воспроизвести</span>
                            </button>
                            <!-- ko if: $parent.addedByUser -->
                            <button type="button" class="btn btn-default btn-xs"
                                    data-bind="click: $root.removeValue.bind($data, $parent, 'sounds')">
                                <span class="glyphicon glyphicon-remove-sign"></span>
                            </button>
                            <!-- /ko -->
                            <br>
                        </div>

                        <!-- drag and drop area for upload -->
                        <div class="drop_zone">
                            <div class="drop_zone_container"
                                 data-bind="dragndropUpload: $root.saveWordSoundValue.bind($data, $data)">Перетащите
                                сюда файлы
                            </div>
                        </div>

                        <input type="file" name="files[]"
                               data-bind="inputFiles: $root.saveWordSoundValue.bind($data, $data)" multiple/>
                    </td>


                    <td>

                        <!-- ko if: $data.addedByUser -->
                        <button type="button" class="btn btn-default btn-sm" data-bind="click: $root.removeWord">
                            Удалить
                        </button>
                        <!-- /ko -->

                        <button type="button" class="btn btn-default btn-sm" data-bind="click: $root.showParadigms">
                            Парадигмы
                        </button>

                        <button type="button" class="btn btn-default btn-sm" data-bind="click: $root.showEtymology">
                            Этимология
                        </button>

                    </td>

                </tr>

                <!-- /ko -->

                </tbody>

            </table>
        </div>
    </div>

    <div class="text-center">
        <nav>
            <ul class="pagination" data-bind="foreach: new Array(pageCount())">
                <!-- ko if: $index()+1 == $root.pageIndex() -->
                <li class="active"><a href="#" data-bind="click: $root.getPage.bind($root, $index()+1), text: $index()+1"></a></li>
                <!-- /ko -->
                <!-- ko ifnot: $index()+1 == $root.pageIndex() -->
                <li><a href="#" data-bind="click: $root.getPage.bind($root, $index()+1), text: $index()+1"></a></li>
                <!-- /ko -->
            </ul>
        </nav>
    </div>
</div>

<script data-main="${request.static_url('lingvodoc:static/js/lingvodocedit.js')}"
        src="${request.static_url('lingvodoc:static/js/require.js')}"></script>

</body>
</html>
