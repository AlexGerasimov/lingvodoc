<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">

    <title>Lingvodoc future</title>
    <link rel="stylesheet" type="text/css" href="${request.static_url('lingvodoc:static/css/lingvodoc.css')}"/>
    <script src="${request.static_url('lingvodoc:static/js/lingvodoc.js')}"></script>

</head>

<body ng-app="EditDictionaryModule">

<div id="clientId" data-lingvodoc="${client_id}"></div>
<div id="userId" data-lingvodoc="${user.id}"></div>

<div id="dictionaryClientId" data-lingvodoc="${dictionary_client_id}"></div>
<div id="dictionaryObjectId" data-lingvodoc="${dictionary_object_id}"></div>
<div id="perspectiveClientId" data-lingvodoc="${perspective_client_id}"></div>
<div id="perspectiveId" data-lingvodoc="${perspective_id}"></div>


<div id="allLexicalEntriesUrl" data-lingvodoc="${request.route_url('lexical_entries_all', dictionary_client_id=dictionary_client_id, dictionary_object_id=dictionary_object_id, perspective_client_id=perspective_client_id, perspective_id=perspective_id)}"></div>
<div id="getPerspectiveFieldsUrl" data-lingvodoc="${request.route_url('perspective_fields', dictionary_client_id=dictionary_client_id, dictionary_object_id=dictionary_object_id, perspective_client_id=perspective_client_id, perspective_id=perspective_id)}"></div>
<div id="createLexicalEntryUrl" data-lingvodoc="${request.route_url('create_lexical_entry', dictionary_client_id=dictionary_client_id, dictionary_object_id=dictionary_object_id, perspective_client_id=perspective_client_id, perspective_id=perspective_id)}"></div>



<nav class="lingvodoc-navbar">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Lingvodoc</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="${request.route_url('home')}">Home</a></li>
                <li class="active"><a href="${request.route_url('dashboard')}">Dictionaries</a></li>
                <li><a href="${request.route_url('languages')}">Languages</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#about">About</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">${user.name}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#" onclick="alert('Not implemented!');">Profile</a></li>
                        <li><a href="${request.route_url('logout')}">Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid" style="padding-top: 20px" ng-controller="EditDictionaryController" ng-cloak>

    <div class="row" style="margin: 30px 0">
        <div class="col-sm-10">
            <wavesurfer url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
        </div>

        <div class="col-sm-2">
            <button ng-class="{disabled: !isMediaFileAvailable()}" class="btn btn-success btn-block"
                    ng-click="playPause()">
                <span id="play" ng-show="paused">
                    <i class="glyphicon glyphicon-play"></i>
                    Play
                </span>

                <span id="pause" ng-show="!paused">
                    <i class="glyphicon glyphicon-pause"></i>
                    Pause
                </span>
            </button>
        </div>
    </div>


    <div class="row">
        <div class="col-md-1">
            <button type="button" class="btn btn-default" ng-click="addNewLexicalEntry()">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <td ng-repeat="field in dictionaryView.dictionaryFields">{{ field.entity_type }}</td>
            <td> <!-- action --> </td>
        </tr>
        </thead>

        <tbody>


        <tr ng-repeat="lexicalEntry in lexicalEntries">

            <td ng-repeat="field in dictionaryView.dictionaryFields" ng-init="fieldValues=getFieldValues(lexicalEntry, field)">

                <div ng-if="field.data_type == 'text'" >
                    <ul class="entries_list">
                        <li ng-repeat="fieldValue in fieldValues">
                            {{ fieldValue.content }}
                        </li>
                    </ul>


                    <button type="button" class="btn btn-default btn-sm" ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>

                    <br>

                    <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <input type="text" value="" placeholder="" ng-blur="saveTextValue(lexicalEntry.client_id, lexicalEntry.object_id, field, $event)">
                    </div>

                </div>


                <div ng-if="field.data_type == 'image'">
                    <ul class="entries_list">
                        <li ng-repeat="fieldValue in fieldValues">
                            {{ fieldValue.content }}
                        </li>
                    </ul>

                    <button type="button" class="btn btn-default btn-sm" ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>

                    <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <span class="btn btn-default btn-file">
                            Upload <input type="file" on-read-file="saveImageValue(lexicalEntry.client_id, lexicalEntry.object_id, field, $fileName, $fileType, $fileContent)">
                        </span>
                    </div>

                </div>

                <div ng-if="field.data_type == 'sound'">
                    <ul class="entries_list">
                        <li ng-repeat="fieldValue in fieldValues">
                            <button type="button" class="btn btn-default btn-sm" ng-click="play(fieldValue.content)">
                                <span class="glyphicon glyphicon-play">Play</span>
                            </button>
                        </li>
                    </ul>


                    <button type="button" class="btn btn-default btn-sm" ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>

                    <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <span class="btn btn-default btn-file">
                            Upload <input type="file" on-read-file="saveSoundValue(lexicalEntry.client_id, lexicalEntry.object_id, field, $fileName, $fileType, $fileContent)">
                        </span>
                    </div>

                </div>

                <div ng-if="field.isGroup">
                    <div ng-if="field.isGroup">

                        <button type="button" class="btn btn-default btn-sm" ng-click="editGroup(lexicalEntry.client_id, lexicalEntry.object_id, field, fieldValues)">
                            <span class="glyphicon glyphicon-list">Edit</span>
                        </button>

                    </div>

                </div>

                <div ng-if="field.data_type == 'grouping_tag'">

                </div>

            </td>

            <td> <!-- action --> </td>

        </tr>

        </tbody>

    </table>
</div>

<div class="text-center">
    <nav>
        <ul class="pagination" ng-repeat="pageNumber in range(1, pageCount)">
                <span ng-if="pageNumber == pageIndex">
                    <li class="active">{{ pageNumber }}</li>
                </span>
                <span ng-if="pageNumber != pageIndex">
                    <li><a href="#" ng-click="getPage(pageNumber)">{{ pageNumber }}</a></li>
                </span>
        </ul>
    </nav>
</div>

<script type="text/ng-template" id="etymologyModal.html">

    <div class="modal-header">
        <h3 class="modal-title">Этимология</h3>
    </div>

    <div class="modal-body">

        <div class="row" style="margin: 30px 0">

            <div class="col-sm-10">
                <wavesurfer id url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
            </div>

            <div class="col-sm-2">
                <button ng-class="{disabled: !isMediaFileAvailable()}" class="btn btn-success btn-block"
                        ng-click="playPause()">
                    <span id="play" ng-show="paused">
                        <i class="glyphicon glyphicon-play"></i>
                        Play
                    </span>

                    <span id="pause" ng-show="!paused">
                        <i class="glyphicon glyphicon-pause"></i>
                        Pause
                    </span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td>Запись слова</td>
                        <td>Транскрипция</td>
                        <td>Перевод</td>
                        <td>Звук</td>
                        <td>Словарь</td>
                    </tr>
                    </thead>

                    <tbody>

                    <tr ng-repeat="word in words">
                        <td>
                            <div ng-repeat="entry in word.entries">
                                <div>{{ entry.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="transcription in word.transcriptions">
                                <div>{{ transcription.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="translation in word.translations">
                                <div>{{ translation.content }}</div>
                            </div>
                        </td>

                        <td>
                            <div ng-repeat="sound in word.sounds">
                                <div>
                                    <button type="button" class="btn btn-default btn-sm" ng-click="play(sound.url)">
                                        <span class="glyphicon glyphicon-play">Воспроизвести</span>
                                    </button>
                                </div>
                            </div>
                        </td>

                        <td>
                            <div>{{ word.dictionary_name }}</div>
                        </td>

                    </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</script>


