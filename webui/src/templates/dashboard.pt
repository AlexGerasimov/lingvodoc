<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">

    <title>Lingvodoc future</title>
    <link rel="stylesheet" type="text/css" href="${request.static_url('lingvodoc:static/css/lingvodoc.css')}"/>
    <script src="${request.static_url('lingvodoc:static/js/dashboard.js')}"></script>

</head>

<body class="body-dashboard" ng-app="DashboardModule">

<div id="clientId" data-lingvodoc="${client_id}"></div>
<div id="userId" data-lingvodoc="${user.id}"></div>

<div id="dictionariesUrl" data-lingvodoc="${request.route_url('dictionaries')}"></div>
<div id="languagesUrl" data-lingvodoc="${request.route_url('get_languages')}"></div>
<div id="createDictionaryUrl" data-lingvodoc="${request.route_url('create_dictionary')}"></div>

<div metal:use-macro="load: nav.pt"></div>


<div class="container" ng-controller="DashboardController" ng-cloak>


    <div class="panel">
        <button type="button" class="btn btn-primary" ng-click="loadMyDictionaries()"><translatable>My dictionaries</translatable></button>
        <button type="button" class="btn btn-primary" ng-click="loadAvailableDictionaries()"><translatable>Avaliable dictionaries</translatable></button>
    </div>
    <br>


    <div ng-if="dictionaries.length > 0">
        <div ng-repeat="dictionary in dictionaries">
            <div>
                <div class="btn-group col-md-8 col-sm-8 col-lg-8 col-xs-8">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <button type="button" class="btn btn-default dropdown-toggle col-md-10 col-lg-11 col-sm-10 col-xs-9"
                            data-toggle="dropdown">{{ dictionary.translation }}
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#" ng-click="editDictionaryProperties(dictionary)"><translatable>Edit information</translatable></a></li>
                        <li><a href="#" ng-click="editDictionaryRoles(dictionary)"><translatable>Edit roles</translatable></a></li>
                        <li><a href="#" ng-click="removeDictionary(dictionary)"><translatable>Remove dictionary</translatable></a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#" ng-click="createPerspective(dictionary)"><translatable>Create new perspective</translatable></a></li>
                    </ul>
                </div>
                <div class="btn-group col-md-4 col-sm-4 col-lg-4">
                    <button type="button" class="btn btn-info col-md-10 col-lg-11 col-sm-10 col-xs-8"
                            data-toggle="dropdown">{{ dictionary.status }}
                    </button>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#" ng-click="setDictionaryStatus(dictionary, 'Hidden')"><translatable>Hidden</translatable></a></li>
                        <li><a href="#" ng-click="setDictionaryStatus(dictionary, 'WiP')"><translatable>WiP</translatable></a></li>
                        <li><a href="#" ng-click="setDictionaryStatus(dictionary, 'Published')"><translatable>Published</translatable></a></li>
                    </ul>
                </div>

            </div>

            <br><br>

            <div>
                <div ng-repeat="perspective in dictionary.perspectives">
                    <div class="btn-group btn-group-xs col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 col-md-7 col-sm-7 col-lg-7 col-xs-7">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <button type="button"
                                class="btn btn-default col-md-10 col-lg-11 col-sm-10 col-xs-9 dropdown-toggle"
                                data-toggle="dropdown">{{ perspective.translation_string }}
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" ng-attr-href="{{ getActionLink(dictionary, perspective, 'view') }}"><translatable>View published</translatable></a></li>
                            <li><a href="#" ng-attr-href="{{ getActionLink(dictionary, perspective, 'edit') }}"><translatable>Edit</translatable></a></li>
                            <li><a href="#" ng-attr-href="{{ getActionLink(dictionary, perspective, 'publish') }}"><translatable>Publish</translatable></a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#" ng-click="editPerspectiveRoles(dictionary, perspective)"><translatable>Edit roles</translatable></a></li>
                            <li><a href="#" ng-click="editPerspectiveProperties(dictionary, perspective)"><translatable>Edit properties</translatable></a></li>
                            <li><a href="#" ng-click="removePerspective(dictionary, perspective)"><translatable>Remove perspective</translatable></a></li>

                        </ul>
                    </div>
                    <div class="btn-group btn-group-xs col-md-4 col-sm-4 col-lg-4 col-xs-4 ">
                        <button type="button"
                                class="btn btn-info dropdown-toggle col-md-10 col-lg-11 col-sm-10 col-xs-8"
                                data-toggle="dropdown">{{ perspective.status }}
                        </button>
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#"
                                   ng-click="setPerspectiveStatus(dictionary, perspective, 'Hidden')"><translatable>Hidden</translatable></a></li>
                            <li><a href="#" ng-click="setPerspectiveStatus(dictionary, perspective, 'WiP')"><translatable>WiP</translatable></a></li>
                            <li><a href="#" ng-click="setPerspectiveStatus(dictionary, perspective, 'Published')"><translatable>Published</translatable></a>
                            </li>
                        </ul>
                    </div>
                    <br><br>
                </div>
            </div>
            <hr>
        </div>
    </div>

    <div ng-if="dictionaries.length == 0">
        <span>No dictionaries</span>
    </div>

    <hr>

    <a href="${request.route_url('new_dictionary')}" class="btn btn-primary"><translatable>Create dictionary...</translatable></a>
</div>


<script type="text/ng-template" id="editDictionaryPropertiesModal.html">

    <div class="modal-header">
        <h3 class="modal-title"></h3>
    </div>

    <div class="modal-body">

        <label for="dictionaryName"><translatable>Dictionary name</translatable></label>
        <input type="text" id="dictionaryName" class="form-control" placeholder="" required autofocus
               ng-model="dictionaryProperties.translation">

        <label for="language"><translatable>Language</translatable></label>
        <select id="language" class="form-control" ng-model="data.selectedLanguage"
                ng-options="language.compositeId as language.translation_string for language in languages">
            <option></option>
        </select>
    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()"><translatable>OK</translatable></button>
        <button class="btn btn-danger" type="button" ng-click="cancel()"><translatable>Cancel</translatable></button>
    </div>

</script>


<script type="text/ng-template" id="editPerspectivePropertiesModal.html">

    <div class="modal-header">
        <h3 class="modal-title"></h3>
    </div>

    <div class="modal-body">
        <div>
            <div class="form-group">
                <label for="perspectiveName"><translatable>Perspective name</translatable></label>
                <input type="text" id="perspectiveName" class="form-control" placeholder="" required autofocus
                       ng-model="perspective.translation" ng-change="perspective.translation_string=perspective.translation">

                <label for="perspectiveAuthors"><translatable>Authors</translatable></label>
                <input type="text" id="perspectiveAuthors" class="form-control" placeholder="" required autofocus
                       ng-model="authors">
            </div>

            <div class="form-group">
                <label for="isTemplate"><translatable>I want to share this perspective as template</translatable></label>
                <input type="checkbox" id="isTemplate" ng-model="perspective.is_template">
            </div>

            <div class="form-group">
                <span class="glyphicon glyphicon-plus-sign" ng-click="addField()"></span>
            </div>

            <table class="table">
                <thead>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                </thead>

                <tbody ng-repeat="field in perspective.fields">
                <tr>

                    <td>
                        <input type="checkbox" ng-checked="field.status == 'enabled'"
                               ng-model="perspective.fields[$index]._statusEnabled">
                    </td>

                    <td>
                        <input type="text" class="form-control" ng-model="perspective.fields[$index].entity_type">
                    </td>

                    <td>
                        <select class="form-control" ng-model="perspective.fields[$index].data_type">
                            <option value="text" ng-if="field.data_type == 'text'" selected>Text</option>
                            <option value="text" ng-if="field.data_type != 'text'">Text</option>
                            <option value="image" ng-if="field.data_type == 'image'" selected>Image</option>
                            <option value="image" ng-if="field.data_type != 'image'">Image</option>
                            <option value="sound" ng-if="field.data_type == 'sound'" selected>Audio</option>
                            <option value="sound" ng-if="field.data_type != 'sound'">Audio</option>
                            <option value="grouping_tag" ng-if="field.data_type == 'grouping_tag'" selected>Grouping
                                tag
                            </option>
                            <option value="grouping_tag" ng-if="field.data_type != 'grouping_tag'">Groupping tag
                            </option>
                        </select>

                    </td>

                    <td>
                        <input type="checkbox" ng-checked="field.group || perspective.fields[$index]._groupEnabled"
                               ng-model="perspective.fields[$index]._groupEnabled" ng-change="enableGroup($index)">
                    </td>


                    <td>
                        <input type="text" ng-model="perspective.fields[$index].group" class="form-control"
                               ng-if="field.group!==undefined">
                    </td>

                    <td>
                        <input type="checkbox"
                               ng-checked="field.contains && field.contains.length > 0 || perspective.fields[$index]._containsEnabled"
                               ng-if="field.data_type == 'sound'" ng-model="perspective.fields[$index]._containsEnabled"
                               ng-change="enableLinkedField($index)">
                    </td>

                    <td>
                        <span class="glyphicon glyphicon-circle-arrow-right"
                              ng-if="field.data_type == 'sound' && field.contains && field.contains.length > 0"></span>
                    </td>

                    <td>


                        <input type="text" ng-value="field.contains[0].entity_type" class="form-control"
                               ng-if="field.data_type == 'sound' && (field.contains && field.contains.length > 0 || perspective.fields[$index]._containsEnabled)"
                               ng-model="perspective.fields[$index].contains[0].entity_type">
                    </td>

                    <td>

                        <label class="checkbox-inline" ng-if="field.data_type == 'text'">
                            <input type="checkbox"
                                   ng-checked="field.translatable"
                                   ng-model="perspective.fields[$index].translatable"> <translatable>translatable</translatable></label>
3877466

                        <select class="form-control"
                                ng-if="field.data_type == 'sound' && (field.contains && field.contains.length > 0 || perspective.fields[$index]._containsEnabled)"
                                ng-model="perspective.fields[$index].contains[0].data_type">
                            <option value="text" ng-if="field.contains[0].data_type == 'text'" selected><translatable>Text</translatable></option>
                            <option value="text" ng-if="field.contains[0].data_type != 'text'"><translatable>Text</translatable></option>
                            <option value="image" ng-if="field.contains[0].data_type == 'image'" selected><translatable>Image</translatable></option>
                            <option value="image" ng-if="field.contains[0].data_type != 'image'"><translatable>Image</translatable></option>
                            <option value="sound" ng-if="field.contains[0].data_type == 'sound'" selected><translatable>Audio</translatable></option>
                            <option value="sound" ng-if="field.contains[0].data_type != 'sound'"><translatable>Audio</translatable></option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type == 'grouping_tag'" selected>
                                <translatable>Groupping tag</translatable>
                            </option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type != 'grouping_tag'"><translatable>Groupping tag</translatable></option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type == 'markup'" selected>
                                <translatable>Markup</translatable>
                            </option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type != 'markup'"><translatable>Markup</translatable></option>
                        </select>
                    </td>

                    <td>
                        <span class="glyphicon glyphicon-remove" ng-click="removeField(field)"></span>
                    </td>


                </tr>
                </tbody>
            </table>
        </div>

        <div class="panel">
            <div class="panel-header">
                Files
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tr ng-repeat="blob in perspective.blobs">
                        <td>{{ blob.name }}</td>
                        <td> <span class="glyphicon glyphicon-remove" ng-click="removeBlob(blob)"></span> </td>
                    </tr>
                </table>

                <select id="blob" class="form-control" ng-model="blobId" ng-options="blob.getId() as blob.name for blob in blobs track by blob.getId()">
                    <option></option>
                </select>

                <button type="button" class="btn btn-primary" ng-click="addBlob()"><translatable>Add</translatable></button>
            </div>

        </div>

        <div class="panel">
            <div class="panel-header">
                Location
            </div>
            <div class="panel-body">
                <button type="button" class="btn btn-primary" ng-click="editGeoLabels()"><translatable>Location...</translatable></button>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()" ng-disabled="!controls.ok"><translatable>OK</translatable></button>
        <button class="btn btn-danger" type="button" ng-click="cancel()" ng-disabled="!controls.cancel"><translatable>Cancel</translatable></button>
    </div>

</script>


<script type="text/ng-template" id="editRolesModal.html">

    <div class="modal-header">
        <h3 class="modal-title"></h3>
    </div>

    <div class="modal-body">
        <div>


            <table class="table table-bordered">
                <thead>
                <tr>
                    <td></td>
                    <td ng-repeat="(role, users) in roles">{{ role }}</td>
                </tr>
                </thead>

                <tbody>
                <tr ng-repeat="user in userTable">
                    <td>{{ user.name }}</td>
                    <td ng-repeat="(role, users) in roles">
                        <input type="checkbox" ng-checked="userHasRole(user, role)"
                               ng-click="toggleRole($event, user, role)">
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

        <div>
            <h4>Add new user</h4>
            <label for="userLogin"></label>
            <input id="userLogin" class="form-control" type="text" placeholder="Search user" ng-model="searchQuery">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <td><translatable>User</translatable></td>
                    <td><translatable>Name</translatable></td>
                    <td></td>
                </tr>
                </thead>

                <tbody>
                <tr ng-repeat="user in suggestedUsers">
                    <td>{{ user.login }}</td>
                    <td>{{ user.name }}</td>
                    <td>
                        <button class="btn btn-primary" ng-click="addUser(user)">
                            <span class="glyphicon glyphicon-plus-sign"></span>
                        </button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>


    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()"><translatable>OK</translatable></button>
        <button class="btn btn-danger" type="button" ng-click="cancel()"><translatable>Cancel</translatable></button>
    </div>

</script>


<script type="text/ng-template" id="createPerspectiveModal.html">

    <div class="modal-header">
        <h3 class="modal-title"></h3>
    </div>

    <div class="modal-body">
        <label for="perspective"><translatable>Import perspective</translatable></label>
        <select id="perspective" class="form-control" ng-options="p.getId() as p.translation_string for p in perspectives track by p.getId()" ng-model="perspectiveId">
            <option></option>
        </select>

        <hr>

        <div>
            <div class="form-group">
                <label for="perspectiveName"><translatable>Perspective name</translatable></label>
                <input type="text" id="perspectiveName" class="form-control" placeholder="" required autofocus
                       ng-model="perspectiveName">
            </div>

            <div class="form-group">
                <label for="isTemplate"><translatable>I want to share this perspective as template</translatable></label>
                <input type="checkbox" id="isTemplate" ng-model="isTemplate">
            </div>

            <div class="form-group">
                <span class="glyphicon glyphicon-plus-sign" ng-click="addField()"></span>
            </div>

            <table class="table">
                <thead>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                </thead>

                <tbody ng-repeat="field in perspective.fields">
                <tr>

                    <td>
                        <input type="checkbox" ng-checked="field.status == 'enabled'"
                               ng-model="perspective.fields[$index]._statusEnabled">
                    </td>

                    <td>
                        <input type="text" class="form-control" ng-model="perspective.fields[$index].entity_type">
                    </td>

                    <td>
                        <select class="form-control" ng-model="perspective.fields[$index].data_type">
                            <option value="text" ng-if="field.data_type == 'text'" selected><translatable>Text</translatable></option>
                            <option value="text" ng-if="field.data_type != 'text'"><translatable>Text</translatable></option>
                            <option value="image" ng-if="field.data_type == 'image'" selected><translatable>Image</translatable></option>
                            <option value="image" ng-if="field.data_type != 'image'"><translatable>Image</translatable></option>
                            <option value="sound" ng-if="field.data_type == 'sound'" selected><translatable>Audio</translatable></option>
                            <option value="sound" ng-if="field.data_type != 'sound'"><translatable>Audio</translatable></option>
                            <option value="grouping_tag" ng-if="field.data_type == 'grouping_tag'" selected><translatable>Grouping tag</translatable>
                            </option>
                            <option value="grouping_tag" ng-if="field.data_type != 'grouping_tag'"><translatable>Groupping tag</translatable></option>
                        </select>

                    </td>

                    <td>
                        <input type="checkbox" ng-checked="field.group || perspective.fields[$index]._groupEnabled"
                               ng-model="perspective.fields[$index]._groupEnabled" ng-change="enableGroup($index)">
                    </td>


                    <td>
                        <input type="text" ng-model="perspective.fields[$index].group" class="form-control"
                               ng-if="field.group!==undefined">
                    </td>

                    <td>
                        <input type="checkbox"
                               ng-checked="field.contains && field.contains.length > 0 || perspective.fields[$index]._containsEnabled"
                               ng-if="field.data_type == 'sound'" ng-model="perspective.fields[$index]._containsEnabled"
                               ng-change="enableLinkedField($index)">
                    </td>

                    <td>
                        <span class="glyphicon glyphicon-circle-arrow-right"
                              ng-if="field.data_type == 'sound' && field.contains && field.contains.length > 0"></span>
                    </td>

                    <td>


                        <input type="text" ng-value="field.contains[0].entity_type" class="form-control"
                               ng-if="field.data_type == 'sound' && (field.contains && field.contains.length > 0 || perspective.fields[$index]._containsEnabled)"
                               ng-model="perspective.fields[$index].contains[0].entity_type">
                    </td>

                    <td>

                        <label class="checkbox-inline" ng-if="field.data_type == 'text'">
                            <input type="checkbox"
                                   ng-checked="field.translatable"
                                   ng-model="perspective.fields[$index].translatable"> <translatable>translatable</translatable></label>


                        <select class="form-control"
                                ng-if="field.data_type == 'sound' && (field.contains && field.contains.length > 0 || perspective.fields[$index]._containsEnabled)"
                                ng-model="perspective.fields[$index].contains[0].data_type">
                            <option value="text" ng-if="field.contains[0].data_type == 'text'" selected><translatable>Text</translatable></option>
                            <option value="text" ng-if="field.contains[0].data_type != 'text'"><translatable>Text</translatable></option>
                            <option value="image" ng-if="field.contains[0].data_type == 'image'" selected><translatable>Image</translatable></option>
                            <option value="image" ng-if="field.contains[0].data_type != 'image'"><translatable>Image</translatable></option>
                            <option value="sound" ng-if="field.contains[0].data_type == 'sound'" selected><translatable>Audio</translatable></option>
                            <option value="sound" ng-if="field.contains[0].data_type != 'sound'"><translatable>Audio</translatable></option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type == 'grouping_tag'" selected>
                                <translatable>Groupping tag</translatable>
                            </option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type != 'grouping_tag'"><translatable>Groupping tag</translatable>
                            </option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type == 'markup'" selected>
                                <translatable>Markup</translatable>
                            </option>
                            <option value="grouping_tag" ng-if="field.contains[0].data_type != 'markup'"><translatable>Markup</translatable></option>
                        </select>
                    </td>


                </tr>
                </tbody>
            </table>

        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()" ng-disabled="!controls.ok"><translatable>OK</translatable></button>
        <button class="btn btn-danger" type="button" ng-click="cancel()"><translatable>Cancel</translatable></button>
    </div>

</script>



<script type="text/ng-template" id="perspectiveGeoLabelsModal.html">


    <div class="modal-header">
        <h3 class="modal-title"></h3>
    </div>

    <div class="modal-body">

        <div class="row">
            <div class="col-md-12" map-lazy-load="http://maps.google.com/maps/api/js"
                 map-lazy-load-params="{{googleMapsUrl}}">
                <ng-map zoom="2" style="height: 600px;" on-click="addMarker()">
                    <marker ng-repeat="pos in positions" position="{{pos.lat}}, {{pos.lng}}" on-click="removeMarker(pos)"></marker>
                </ng-map>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()"><translatable>OK</translatable></button>
    </div>
</script>






<div metal:use-macro="load: response_handler.pt"></div>

</body>

</html>