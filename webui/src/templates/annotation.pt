<script type="text/ng-template" id="annotationModal.html">

    <div class="modal-header">
        <h3 class="modal-title">ELAN</h3>
    </div>

    <div class="modal-body" ng-cloak>

        <div class="row" style="margin: 30px 0">
            <div class="col-sm-10">
                <wavesurfer id url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
                <wavesurfer-spectrogram></wavesurfer-spectrogram>
            </div>

            <div class="col-sm-2">
                <button class="btn btn-success btn-block"
                        ng-click="playPause()">
                    <span id="play" ng-show="paused">
                        <i class="glyphicon glyphicon-play"></i>
                        Play
                    </span>

                    <span id="pause" ng-show="!paused">
                        <i class="glyphicon glyphicon-pause"></i>
                        Pause
                    </span>
                </button>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 ">
                <table class="table table-striped table-bordered" ng-repeat="tier in annotation.tiers">
                    <thead>

                    <tr>
                        <td colspan="4">
                            <h3>{{ tier.linguisticTypeRef }}</h3>
                        </td>
                    </tr>

                    <tr>
                        <td>id</td>
                        <td>Start</td>
                        <td>End</td>
                        <td>Annotation</td>
                        <td></td>
                    </tr>

                    </thead>

                    <tr ng-repeat="a in tier.annotations">
                        <td>{{ a.id }}</td>
                        <td>{{ annotation.timeSlotRefToSeconds(a.timeslotRef1) }}</td>
                        <td>{{ annotation.timeSlotRefToSeconds(a.timeslotRef2) }}</td>
                        <td>{{ a.value }}</td>
                        <td>
                            <button type="button" class="btn btn-default" ng-click="playAnnotation(a)">
                                <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </td>
                    </tr>

                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 ">
                <a href="#" ng-href="{{ markup.content }}" class="btn btn-default"><translatable>Download source</translatable></a>
            </div>

            <div class="col-md-3 ">
                <a href="#" ng-href="{{ sound.content }}" class="btn btn-default" download="{{ sound.content.substring(sound.content.lastIndexOf('/')+1) }}"><translatable>Download audio</translatable></a>
            </div>

        </div>

    </div>
</script>